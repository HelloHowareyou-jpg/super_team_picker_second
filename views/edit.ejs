<%- include("./partials/header") %>

<h1>Edit Cohort</h1>

<form action="/cohorts/<%= cohort.id %>" method="POST">
  <div class="form-row">
    <div class="form-group col-md-8">
      <label for="logo_url">Logo URL</label>
      <input
        name="logo_url"
        type="text"
        class="form-control"
        id="logo_url"
        value="<%= cohort.logo_url %>"
      />
    </div>
    <div class="form-group col-md-8">
      <label for="name">Cohort Name</label>
      <input
        name="name"
        type="text"
        class="form-control"
        id="name"
        value="<%= cohort.name %>"
      />
    </div>
    <div class="form-group col-md-12">
      <label for="members">Members</label>
      <textarea
        name="members"
        type="text"
        class="form-control"
        id="content"
        rows="3"
      >
<%= cohort.members %></textarea
      >
    </div>
  </div>

  <input type="hidden" name="_method" value="PATCH" />
  <button type="submit" class="btn btn-success">Edit Cohort</button>
</form>

<%- include("./partials/footer") %>