<%- include("./partials/header") %>

<h1>New Cohort</h1>

<form action="/cohorts/new" method="POST">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="logo_url">Logo URL</label>
        <input name="logo_url" type="text" class="form-control" id="logo_url">
      </div>
        <div class="form-group col-md-6">
          <label for="name">Cohort Name</label>
          <input name="name" type="text" class="form-control" id="name">
        </div>
      <div class="form-group col-md-12">
        <label for="members">Members</label>
        <textarea name="members" type="text" class="form-control" id="content" rows="3"></textarea>
      </div>
    </div>
  <br>
  <button type="submit" class="btn btn-success">Add Cohort</button>
</form>

<%- include("./partials/footer") %>